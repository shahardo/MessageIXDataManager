{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: MessageIX Data Manager",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "internalConsole",
            "justMyCode": true,
            "pythonPath": "${workspaceFolder}/env/Scripts/python.exe",
            "cwd": "${workspaceFolder}/"
        },
        {
            "name": "Python: Debug All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--tb=short",
                "--capture=no"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "pythonPath": "${workspaceFolder}/env/Scripts/python.exe",
            "cwd": "${workspaceFolder}/",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Debug Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "--tb=short",
                "--capture=no"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "pythonPath": "${workspaceFolder}/env/Scripts/python.exe",
            "cwd": "${workspaceFolder}/",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Debug Specific Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "::${selectedText}",
                "-v",
                "--tb=short",
                "--capture=no",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "pythonPath": "${workspaceFolder}/env/Scripts/python.exe",
            "cwd": "${workspaceFolder}/",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Run Tests with Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "--cov=src",
                "--cov-report=html",
                "--cov-report=term-missing",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "pythonPath": "${workspaceFolder}/env/Scripts/python.exe",
            "cwd": "${workspaceFolder}/",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
