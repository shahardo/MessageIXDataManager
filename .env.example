# MessageIX Data Manager Environment Configuration

# GAMS Configuration
# Path to GAMS executable (auto-detected if not set)
# GAMS_PATH=/path/to/gams/executable

# MessageIX Configuration
# Path to MessageIX database file (auto-detected if not set)
# MESSAGEIX_DB_PATH=/path/to/messageix/database.db

# MessageIX platform name for this application
MESSAGEIX_PLATFORM_NAME=messageix_data_manager

# Application Configuration
# Enable debug mode
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Database Configuration (for future use)
# DATABASE_URL=sqlite:///messageix_data_manager.db
